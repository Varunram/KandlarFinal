<% @title = %[Kandlar | Flanges] %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha/css/bootstrap.min.css">  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script></head>
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Droid+Sans" />
<br> <h1 style ="font-family: sans-serif; letter-spacing: -2.5px; font: 'Droid-Sans'; color: #093775;">Available &nbsp; Flanges</h1><br><br>

<table class="table table-hover table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Sl.No</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Codeno</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Materialgrade</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Size</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Class</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Tk</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Quantity</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Kgs</th>
    </tr>
  </thead>

  <tbody>
    <% @flanges.each do |flange| %>
      <tr class="table-info">
        <td><%= flange.id %></td>
        <td><%= flange.codeno %></td>
        <td><%= flange.materialgrade %></td>
        <td><%= flange.size %></td>
        <td><%= flange.classc %></td>
        <td><%= flange.tk %></td>
        <td><%= flange.quantity %></td>
        <td><%= flange.kgs %></td>
        <td><%= link_to 'Show', flange %></td>
        <% if current_user.admin? %>

        <td><%= link_to 'Edit', edit_flange_path(flange) %></td>
        <td><%= link_to 'Destroy', flange, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


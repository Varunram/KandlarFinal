<% @title = %[Kandlar | Tubes] %>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha/css/bootstrap.min.css">  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script></head>
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Droid+Sans" />
<br> <h1 style ="font-family: sans-serif; letter-spacing: -2.5px; font: 'Droid-Sans'; color: #093775;">Available &nbsp;Tubes</h1><br><br>

<table class= "table table-hover table-bordered">
  <thead class="thead-inverse">
    <tr>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Sl.No</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Codeno</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Type</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Materialgrade</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Od</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Lg</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Weight</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Quantity</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Price</th>
    </tr>
  </thead>

  <tbody>
    <% @tubes.each do |tube| %>
      <tr class="table-warning">
        <td><%= tube.id %></td>
        <td><%= tube.codeno %></td>
        <td><%= tube.typec %></td>
        <td><%= tube.materialgrade %></td>
        <td><%= tube.od %></td>
        <td><%= tube.lg %></td>
        <td><%= tube.weight %></td>
        <td><%= tube.quantity %></td>
        <td><%= tube.price %></td>
        <td><%= link_to 'Show', tube %></td>
        <% if current_user.admin? %>

        <td><%= link_to 'Edit', edit_tube_path(tube) %></td>
        <td><%= link_to 'Destroy', tube, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% @title = %[Kandlar | Weldings] %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha/css/bootstrap.min.css">  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script></head>
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Droid+Sans" />
<br> <h1 style ="font-family: sans-serif; letter-spacing: -2.5px; font: 'Droid-Sans'; color: #093775">Welding &nbsp; Parts</h1><br><br>

<table class="table talbe-bordered table-hover">
  <thead class="table-inverse">
    <tr>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Sl.No</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Codeno</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Description</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Quantity</th>
      <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">U.O.M</th>
    </tr>
  </thead>

  <tbody>
    <% @weldings.each do |welding| %>
      <tr class="table-info">
        <td><%= welding.id %></td>
        <td><%= welding.codeno %></td>
        <td><%= welding.description %></td>
        <td><%= welding.quantity %></td>
        <td><%= welding.UOM %></td>
        <td><%= link_to 'Show', welding %></td>
        <% if current_user.admin? %>

        <td><%= link_to 'Edit', edit_welding_path(welding) %></td>
        <td><%= link_to 'Destroy', welding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


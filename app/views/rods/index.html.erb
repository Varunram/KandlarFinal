<html>
<head>
  <% @title = %[Kandlar | Rods] %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha/css/bootstrap.min.css">  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script></head>
<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Droid+Sans" />
<br> <h1 style ="font-family: sans-serif; letter-spacing: -2.5px; font: 'Droid-Sans'; color: #093775;">Available &nbsp;Rods</h1><br><br>
<div class = "container">
  <table class="table table-hover table-bordered">
    <thead class="thead-inverse">
      <tr>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff; ">Sl.No</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Code</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Type</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Material</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Size</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Tk</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Dia</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Lg</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Quantity</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Weight</th>
        <th style ="font-family: sans-serif; font-weight: lighter; font: 'Droid-Sans'; color: #ffffff;">Price</th>

      </tr>
    </thead>

    <tbody>
      <% @rods.each do |rod| %>
        <tr class="table-info">
          <td><%= rod.id %></td>
          <td><%= rod.code %></td>
          <td><%= rod.typec %></td>
          <td><%= rod.material %></td>
          <td><%= rod.size %></td>
          <td><%= rod.tk %></td>
          <td><%= rod.dia %></td>
          <td><%= rod.lg %></td>
          <td><%= rod.quantity %></td>
          <td><%= rod.weight %></td>
          <td><%= rod.price %></td>
          <td><%= link_to 'Show', rod %></td>
          <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_rod_path(rod) %></td>
          <td><%= link_to 'Destroy', rod, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        </tr>
      <% end %>
      <%= @rods.count %>

    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Rod', new_rod_path %>
